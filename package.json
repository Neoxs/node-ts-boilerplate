{
  "name": "node-ts-boilerplate",
  "version": "0.0.1",
  "description": "nodejs typescripte boilerplate",
  "main": "src/server.ts",
  "scripts": {
    "start": "node build/src/app.js",
    "prebuild": "npm run lint",
    "build": "tsc --build",
    "dev": "ts-node-dev src/app.ts",
    "clean": "tsc --build --clean",
